{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(gdb) Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/caustic_design_cli/build/caustic_design", // Path to your compiled executable
            "args": [
                "--source_png=/home/dylan/Documents/Caustic-Design/caustic_design_cli/img/source2.png",
                "--target_png=/home/dylan/Documents/Caustic-Design/caustic_design_cli/img/source2.png",
                "--n_sites=1000",
                "--n_levels=6",
                "--mesh_res=100",
                "--focal_l=1"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}", // Working directory
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "/usr/bin/gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            "preLaunchTask": "build", // Ensure the build task runs before debugging
            "internalConsoleOptions": "openOnSessionStart"
        }
    ]
}